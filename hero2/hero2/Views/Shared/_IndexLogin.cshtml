@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div>
        @Html.ActionLink("Start your adventure here!", "ChooseAdventure")
    </div>
}
else
{
    <div>
        <a href="" class="col-md-6">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</a>
        <a href="" class="col-md-6"> @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</a>
    </div>
}
